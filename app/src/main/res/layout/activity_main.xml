<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bluestars"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/header_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/button2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="10dp"
            android:foreground="@drawable/bluestars" />
        <Button
            android:id="@+id/button3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="212dp"
            android:foreground="@drawable/bluestars" />
        <Button
            android:id="@+id/button1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintStart_toStartOf="parent"
            android:foreground="@drawable/bluestars" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/center_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/header_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <ImageView
                android:id="@+id/chess_board_image1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/chessboard" />

            <TextView
                android:id="@+id/chess_board_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chess Board 1"
                android:layout_gravity="center_vertical"
                android:paddingStart="16dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <ImageView
                android:id="@+id/chess_board_image2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/chessboard" />

            <TextView
                android:id="@+id/chess_board_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chess Board 1"
                android:layout_gravity="center_vertical"
                android:paddingStart="16dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <ImageView
                android:id="@+id/chess_board_image3"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/chessboard" />

            <TextView
                android:id="@+id/chess_board_text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chess Board 1"
                android:layout_gravity="center_vertical"
                android:paddingStart="16dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <ImageView
                android:id="@+id/chess_board_image4"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/chessboard" />

            <TextView
                android:id="@+id/chess_board_text4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chess Board 1"
                android:layout_gravity="center_vertical"
                android:paddingStart="16dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <ImageView
                android:id="@+id/chess_board_image5"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/chessboard" />

            <TextView
                android:id="@+id/chess_board_text5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chess Board 1"
                android:layout_gravity="center_vertical"
                android:paddingStart="16dp" />
        </LinearLayout>

        <Button
            android:id="@+id/play_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/holo_green_dark"
            android:text="Play"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/bottom_item1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/bluestars"
            android:layout_margin="8dp" />
        <ImageView
            android:id="@+id/bottom_item2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/bluestars"
            android:layout_margin="8dp" />
        <ImageView
            android:id="@+id/bottom_item3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/bluestars"
            android:layout_margin="8dp" />
        <ImageView
            android:id="@+id/bottom_item4"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/bluestars"
            android:layout_margin="8dp" />
        <ImageView
            android:id="@+id/bottom_item5"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/bluestars"
            android:layout_margin="8dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
