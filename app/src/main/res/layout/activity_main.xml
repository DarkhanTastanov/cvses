<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bluestars"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/header_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/button2"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:background="@drawable/ripple"

            android:clickable="true"
            android:foreground="@drawable/profile"

            />
        <Button
            android:id="@+id/button3"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginEnd="250dp"
            android:layout_weight="1"
            android:background="@drawable/ripple"

            android:clickable="true"

            android:foreground="@drawable/legue" />

        <Button
            android:id="@+id/button1"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:layout_marginEnd="5dp"
            android:foreground="@drawable/friends"
            android:background="@drawable/ripple"

            android:clickable="true"

            app:layout_constraintStart_toStartOf="parent" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/center_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/header_layout"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal"

            android:background="@drawable/ripple"

            android:focusable="true"
            android:clickable="true">

            <ImageView
                android:id="@+id/chess_board_image1"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:background="@drawable/playbutton"
                android:src="@drawable/chessboard" />

            <TextView
                android:id="@+id/chess_board_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:paddingStart="16dp"
                android:layout_marginTop="10dp"

                android:text="Play Online"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/ripple"

            android:clickable="true"
            android:focusable="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/chess_board_image2"
                android:layout_width="110dp"
                android:layout_height="110dp"

                android:background="@drawable/playbutton"
                android:src="@drawable/chessboard" />

            <TextView
                android:id="@+id/chess_board_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="10dp"
                android:paddingStart="16dp"

                android:text="Solve Puzzles"
                android:textColor="@color/white"

                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:orientation="horizontal"
            android:layout_marginBottom="15dp"

            android:background="@drawable/ripple"
            android:focusable="true"
            android:clickable="true">

            <ImageView
                android:id="@+id/chess_board_image3"
                android:layout_width="110dp"
                android:layout_height="110dp"

                android:background="@drawable/playbutton"
                android:src="@drawable/chessboard" />

            <TextView
                android:id="@+id/chess_board_text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Play Computer"
                android:textColor="@color/white"

                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:paddingStart="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:orientation="horizontal"
            android:layout_marginBottom="15dp"

            android:background="@drawable/ripple"
            android:focusable="true"
            android:clickable="true">

            <ImageView
                android:id="@+id/chess_board_image4"
                android:layout_width="110dp"
                android:layout_height="110dp"

                android:background="@drawable/playbutton"
                android:src="@drawable/chessboard" />

            <TextView
                android:id="@+id/chess_board_text4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Next Lesson"
                android:textColor="@color/white"

                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:paddingStart="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:orientation="horizontal"

            android:background="@drawable/ripple"
            android:focusable="true"
            android:clickable="true">

            <ImageView
                android:id="@+id/chess_board_image5"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:src="@drawable/chessboard" />

            <TextView
                android:id="@+id/chess_board_text5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Daily Puzzle"
                android:textColor="@color/white"

                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:paddingStart="16dp" />
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/play_button"
        android:layout_width="0dp"
        android:layout_height="60dp"

        android:layout_marginStart="15dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="15dp"

        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/playbutton"

        android:clickable="true"
        android:focusable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/center_layout">

        <TextView
            android:id="@+id/play_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginBottom="-10dp"
            android:padding="16dp"

            android:text="Play"
            android:textColor="@android:color/white"
            android:textSize="25sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal"

        android:layout_marginTop="10dp"
        android:layout_marginBottom="35dp"

        android:gravity="center_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/play_button">

        <ImageView
            android:id="@+id/bottom_item1"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginHorizontal="19dp"

            android:src="@drawable/home"
            android:background="@drawable/ripple"

            android:focusable="true"
            android:clickable="true"/>

        <ImageView
            android:id="@+id/bottom_item2"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_weight="1"

            android:src="@drawable/puzzles"
            android:background="@drawable/ripple"

            android:focusable="true"
            android:clickable="true"/>

        <ImageView
            android:id="@+id/bottom_item3"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_weight="1"

            android:src="@drawable/learn"
            android:background="@drawable/ripple"

            android:focusable="true"
            android:clickable="true"/>

        <ImageView
            android:id="@+id/bottom_item4"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:src="@drawable/watch"

            android:background="@drawable/ripple"
            android:focusable="true"
            android:clickable="true"/>

        <ImageView
            android:id="@+id/bottom_item5"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginEnd="19dp"
            android:src="@drawable/moe"
            android:background="@drawable/ripple"
            
            android:focusable="true"
            android:clickable="true"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>


