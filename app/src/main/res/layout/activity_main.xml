<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bluestars"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/header_layout"

        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#33000000"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/button2"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:background="@drawable/ripple"

            android:clickable="true"
            android:foreground="@drawable/profile"

            />

        <Button
            android:id="@+id/button3"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginEnd="250dp"
            android:layout_weight="1"
            android:background="@drawable/ripple"

            android:clickable="true"

            android:foreground="@drawable/legue" />

        <Button
            android:id="@+id/button1"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:background="@drawable/ripple"
            android:clickable="true"

            android:foreground="@drawable/friends"

            app:layout_constraintStart_toStartOf="parent" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/center_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/header_layout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/ripple"

            android:clickable="true"

            android:focusable="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/chess_board_image1"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:background="@drawable/playbutton"
                android:src="@drawable/chessboard" />

            <TextView
                android:id="@+id/chess_board_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="10dp"
                android:paddingStart="16dp"

                android:text="Play Online"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/ripple"

            android:clickable="true"
            android:focusable="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/chess_board_image2"
                android:layout_width="110dp"
                android:layout_height="110dp"

                android:background="@drawable/playbutton"
                android:src="@drawable/chessboard" />

            <TextView
                android:id="@+id/chess_board_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="10dp"
                android:paddingStart="16dp"

                android:text="Solve Puzzles"
                android:textColor="@color/white"

                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/ripple"

            android:clickable="true"
            android:focusable="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/chess_board_image3"
                android:layout_width="110dp"
                android:layout_height="110dp"

                android:background="@drawable/playbutton"
                android:src="@drawable/chessboard" />

            <TextView
                android:id="@+id/chess_board_text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="10dp"
                android:paddingStart="16dp"

                android:text="Play Computer"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/ripple"

            android:clickable="true"
            android:focusable="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/chess_board_image4"
                android:layout_width="110dp"
                android:layout_height="110dp"

                android:background="@drawable/playbutton"
                android:src="@drawable/chessboard" />

            <TextView
                android:id="@+id/chess_board_text4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="10dp"
                android:paddingStart="16dp"

                android:text="Next Lesson"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:background="@drawable/ripple"

            android:clickable="true"
            android:focusable="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/chess_board_image5"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:src="@drawable/chessboard" />

            <TextView
                android:id="@+id/chess_board_text5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="10dp"
                android:paddingStart="16dp"

                android:text="Daily Puzzle"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#33000000"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/center_layout">

        <LinearLayout
            android:id="@+id/play_button"
            android:layout_width="match_parent"
            android:layout_height="60dp"

            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"

            android:background="@drawable/playbutton"
            android:clickable="true"
            android:focusable="true"

            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/play_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginBottom="-10dp"
                android:padding="16dp"

                android:text="Play"
                android:textColor="@android:color/white"
                android:textSize="25sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottom_buttons_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="10dp"

            android:layout_marginBottom="35dp"
            android:gravity="center_horizontal"

            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/play_button">

            <ImageView
                android:id="@+id/bottom_item1"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginHorizontal="19dp"

                android:background="@drawable/ripple"
                android:clickable="true"

                android:focusable="true"
                android:src="@drawable/home" />

            <ImageView
                android:id="@+id/bottom_item2"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_weight="1"

                android:background="@drawable/ripple"
                android:clickable="true"

                android:focusable="true"
                android:src="@drawable/puzzles" />

            <ImageView
                android:id="@+id/bottom_item3"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_weight="1"

                android:background="@drawable/ripple"
                android:clickable="true"

                android:focusable="true"
                android:src="@drawable/learn" />

            <ImageView
                android:id="@+id/bottom_item4"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:background="@drawable/ripple"

                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/watch" />

            <ImageView
                android:id="@+id/bottom_item5"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginEnd="19dp"
                android:background="@drawable/ripple"
                android:clickable="true"

                android:focusable="true"
                android:src="@drawable/moe" />

        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>


