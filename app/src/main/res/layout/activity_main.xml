<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bluestars"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/header_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" >

        <Button
            android:id="@+id/button2"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:background="@drawable/ripple"
            android:clickable="true"
            android:foreground="@drawable/profile" />
        <Button
            android:id="@+id/button3"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_marginEnd="212dp"
            android:layout_weight="1"
            android:background="@drawable/ripple"
            android:clickable="true"

            android:foreground="@drawable/legue" />

        <Button
            android:id="@+id/button1"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginEnd="5dp"
            android:foreground="@drawable/friends"
            android:background="@drawable/ripple"
            android:clickable="true"

            app:layout_constraintStart_toStartOf="parent" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/center_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/header_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal"

            android:background="@drawable/ripple"
            android:focusable="true"
            android:clickable="true">

            <ImageView
                android:id="@+id/chess_board_image1"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:background="@drawable/playbutton"
                android:src="@drawable/chessboard" />

            <TextView
                android:id="@+id/chess_board_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:layout_marginTop="10dp"
                android:text="Play Online"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal"

            android:background="@drawable/ripple"
            android:focusable="true"
            android:clickable="true">

            <ImageView
                android:id="@+id/chess_board_image2"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:background="@drawable/playbutton"
                android:src="@drawable/chessboard" />

            <TextView
                android:id="@+id/chess_board_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingStart="16dp"
                android:text="Solve Puzzles"
                android:textSize="20sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp"

            android:background="@drawable/ripple"
            android:focusable="true"
            android:clickable="true">

            <ImageView
                android:id="@+id/chess_board_image3"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:background="@drawable/playbutton"
                android:src="@drawable/chessboard" />

            <TextView
                android:id="@+id/chess_board_text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Play Computer"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:paddingStart="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp"

            android:background="@drawable/ripple"
            android:focusable="true"
            android:clickable="true">

            <ImageView
                android:id="@+id/chess_board_image4"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:background="@drawable/playbutton"
                android:src="@drawable/chessboard" />

            <TextView
                android:id="@+id/chess_board_text4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Next Lesson"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:paddingStart="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp"

            android:background="@drawable/ripple"
            android:focusable="true"
            android:clickable="true">

            <ImageView
                android:id="@+id/chess_board_image5"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:src="@drawable/chessboard" />

            <TextView
                android:id="@+id/chess_board_text5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Daily Puzzle"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:paddingStart="16dp" />
        </LinearLayout>

    </LinearLayout>


    <Button
        android:id="@+id/play_button"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="15dp"

        android:layout_marginTop="5dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/playbutton"
        android:backgroundTint="@android:color/holo_green_dark"

        android:text="Play"
        android:textColor="@android:color/white"


        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/center_layout" />

    <LinearLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/play_button">

        <ImageView
            android:id="@+id/bottom_item1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginHorizontal="15dp"
            android:src="@drawable/home"
            android:background="@drawable/ripple"
            android:focusable="true"
            android:clickable="true"/>

        <ImageView
            android:id="@+id/bottom_item2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"

            android:src="@drawable/puzzles"
            android:background="@drawable/ripple"
            android:focusable="true"
            android:clickable="true"/>

        <ImageView
            android:id="@+id/bottom_item3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"

            android:src="@drawable/learn"
            android:background="@drawable/ripple"
            android:focusable="true"
            android:clickable="true"/>

        <ImageView
            android:id="@+id/bottom_item4"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@drawable/watch"

            android:background="@drawable/ripple"
            android:focusable="true"
            android:clickable="true"/>

        <ImageView
            android:id="@+id/bottom_item5"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="15dp"
            android:src="@drawable/moe"

            android:background="@drawable/ripple"
            android:focusable="true"
            android:clickable="true"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>


